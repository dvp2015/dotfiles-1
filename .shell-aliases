if which nvim >/dev/null 2>&1; then
  alias vim='nvim'
fi
if which vim >/dev/null 2>&1; then
  alias vi='vim'
  # Run vim in no swap mode (for very big files)
  alias vin='vim -n'
  # Run vim without configuring with .vimrc
  alias purevim='vim -u NONE'
fi

