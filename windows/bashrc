#!/bin/bash

# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# Source global definitions
if [ -f /etc/bashrc ]; then
        . /etc/bashrc
fi

function get_hostname {
  export SHORTNAME=${HOSTNAME}
}

function settitle() {
  u=${USERNAME}
  h="$u@${HOSTNAME}"
  echo -ne "\e]2;$h\a\e]1;$h\a";
} 
# Set directory colors
eval `dircolors ~/.dir_colors`

# Set prompt and window title
inputcolor='[0;37m'
cwdcolor='[0;34m'
host_name='[1;31m'
git_color='[0;33m'
PROMPT_COMMAND='settitle; get_hostname; history -a;'
export PS1='\n\[\e${cwdcolor}\][$PWD]\[\e${git_color}\]`__git_ps1`\[\e${inputcolor}\]\n$ '

# Aliases for "colorized" commands
alias ls='ls -s --color'
alias ll='ls -l --color'

alias grep='grep -n --color'
export EDITOR="vim"
export VISUAL="vim"
export MY_ORIGINAL_PATH=$PATH
export PATH="~/bin:$PATH"
export HISTORSIZE=1000
export SAVEHIST=1000
export HISTFILE=~/.history
 

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# If set, the pattern "**" used in a pathname expansion context will
# match all files and zero or more directories and subdirectories.
shopt -s globstar

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi 

# Load bash session configuration files 
if [[ -d ".bash.d" ]]; then # Load local files
	if [[ -r ".bash.d/__init__.sh" ]]; then
		. ".bash.d/__init__.sh" # The __init__.sh defines the order of loading
	else
		for p in .bash.d/*.sh; do # order of loading is arbitrary
			. $p # Local scipts may call or not to call the generic ones
		done
	fi
else # Load generic scripts for the user configuration
	for p in ~/.bash.d/*.sh; do
		. $p
	done
fi
	
# Add local "bin" folder to the PATH, if exists
if [[ $(pwd) != ~ && -d "bin" ]]; then
	export PATH="$PATH:$(pwd)/bin"
fi
