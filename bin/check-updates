# set -o xtrace   # Display expanded command and arguments       'set -x'                               

# lastversion --help > /dev/null || uv tool install lastversion

check_package() {
  local package=$1 
  local version=$2
  local ver="$(lastversion $package)"
  if [[ "$ver" == "$version" ]]; then
    echo "ðŸ¥º - there's no updates for $package"
  else
    success "There's new version $package-$ver"
  fi
}

echo "Check for packages updates to Python 3.14"

