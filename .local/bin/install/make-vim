#!/bin/bash

install_prerequisites(){
    local prerequisites=(
            clang
            exuberant-ctags
            libgtk-3-dev
            libpython3-dev
            libsm-dev
            libtool-bin
            libx11-dev
            libxpm-dev
            libxt-dev
            libxtst-dev
            lua5.3
            lua5.3-dev
            make
            valgrind
            )
    sudo apt install ${prerequisites[@]}
}

install_vim() {
    git clone git@github.com:vim/vim.git
    cd vim
    cd src
    local options=(
        --disable-arabic
        --disable-rightleft
        --enable-gnome-check
        --enable-gtk2-check
        --enable-gui=auto
        --enable-luainterp=dynamic
        --enable-python3interp=dynamic
        --with-features=huge
        --with-luajit
        --with-x
    )
    ./configure ${options[@]}
    make
    sudo make install
}

install_prerequisites && install_vim

# consider install vim-full
# sudo apt install vim-full


